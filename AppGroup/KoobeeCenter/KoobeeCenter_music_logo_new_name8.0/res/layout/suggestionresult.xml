<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" 
    
    >
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_fafafa"
      
       
        >

        <TextView
            android:id="@+id/leftback"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="12.5dp"
         
           android:text="@string/closethis" 
           android:textColor="@color/textcolor_selector"
           android:textSize="13sp"
           />

        <TextView
            android:id="@+id/problem_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
            android:layout_marginBottom="12.5dp"
           android:text="@string/problemback"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_medium" >
        </TextView>
        
        
    </RelativeLayout>
     <ImageView 
           
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginTop="0dp"
             android:src="@drawable/top_ying"
            />
   
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_gravity="center_horizontal">
     
    <ImageView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
         android:src="@drawable/suggestionsuccess"
         android:layout_marginTop="136dp"
         android:layout_gravity="center_horizontal"
         
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_323232"
        android:textSize="19sp"
        android:layout_marginTop="14dp"
         android:layout_gravity="center_horizontal"
           android:text="@string/sucessrequest"
        />
    
    <TextView 
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/thankrequest"
        android:textColor="@color/color_969696"
        android:textSize="16sp"
        android:layout_marginTop="13dp"
            android:layout_gravity="center_horizontal"
         android:gravity="center_horizontal"
        />
     </LinearLayout>
    </LinearLayout>
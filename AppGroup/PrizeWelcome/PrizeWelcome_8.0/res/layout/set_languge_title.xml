<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/up_height" >

    <ImageView
        android:id="@+id/set_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_icon_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/textsize_title" 
        android:layout_marginLeft="@dimen/h_padding"
        android:layout_marginRight="@dimen/h_padding"
        android:textColor="@color/text_colot_title"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:padding="20dp"
    android:orientation="vertical" >
    
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="20dp"
	    android:text="@string/airquality_txt"
	    android:textColor="#ffffff"
	    android:textSize="@dimen/large_textsize" />
	
	<com.prize.weather.view.DialChartView
	    android:id="@+id/pm_dcv"
	    android:layout_width="@dimen/dialchartview_width"
	    android:layout_height="@dimen/dialchartview_width"
	    android:layout_gravity="center_horizontal"/>
	
	<TextView
	    android:id="@+id/pm_tips"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="@string/no_data"
	    android:textColor="#ffffff"
	    android:textSize="@dimen/medium_textsize" />
	
</LinearLayout>

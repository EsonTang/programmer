<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="@string/listname" />

    <TextView
        android:id="@+id/dialog_tv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:layout_below="@+id/dialog_name" />

    <EditText
        android:id="@+id/dialog_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_tv1"
        android:layout_marginTop="15dp"
        android:hint="@string/new_play_list"
        android:layout_centerHorizontal="true"
        android:ems="10" >
        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/dialog_tv2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_below="@+id/dialog_edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_tv2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="21dp" >
        
        <Button 
            android:id="@+id/dialog_neg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/cancel"/>
        <Button 
            android:id="@+id/dialog_sure"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/confirm"/>
    </LinearLayout>

</RelativeLayout>
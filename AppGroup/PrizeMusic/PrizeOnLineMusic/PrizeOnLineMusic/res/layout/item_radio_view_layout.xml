<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/rank_logo"
        style="@style/imageView_105dp"
        android:layout_alignParentLeft="true"
         />

      <ImageView
        android:id="@+id/icon_fly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/icon_fly"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/collectName_Tv"
        style="@style/textView_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_logo"
        android:layout_alignStart="@+id/rank_logo"
        android:layout_alignEnd="@+id/rank_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="2"
        />

</RelativeLayout>
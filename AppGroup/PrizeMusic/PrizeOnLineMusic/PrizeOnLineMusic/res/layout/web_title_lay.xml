<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/status_color">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:contentDescription="@null"
        android:onClick="onClick"
        android:paddingLeft="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/action_bar_back_selector"/>

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/text_color_404040"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginLeft="19dp"
        android:layout_toLeftOf="@+id/btn_refresh"
        android:layout_toRightOf="@id/btn_back"
        android:gravity="center_vertical"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:onClick="onClick"
        android:paddingRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/web_btn_reload_selector"/>
</RelativeLayout>

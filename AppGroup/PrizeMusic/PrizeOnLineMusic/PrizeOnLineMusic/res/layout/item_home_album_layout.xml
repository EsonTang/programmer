<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo_Iv"
        style="@style/imageView_105dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/icon_fly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/icon_fly"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/play_Iv"
        style="@style/play_icon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/icon_play" />

    <TextView
        android:id="@+id/title_Tv"
        style="@style/textView_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo_Iv"
        android:layout_alignStart="@+id/logo_Iv"
        android:layout_below="@+id/logo_Iv"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
       />

    <TextView
        android:id="@+id/singer_Tv"
        style="@style/textView_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title_Tv"
        android:layout_alignStart="@+id/title_Tv"
        android:layout_below="@+id/title_Tv"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true" />

</RelativeLayout>
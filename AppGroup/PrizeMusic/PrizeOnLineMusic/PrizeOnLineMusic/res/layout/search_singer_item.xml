<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/singer_item_height"
    android:orientation="vertical" >
    
   <ImageView
        android:id="@+id/singerItem_img_id"
        android:layout_width="@dimen/search_singer_item"
        android:layout_height="@dimen/search_singer_item"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/singerItem_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/singerItem_img_id"
        android:textColor="@color/text_color_323232"
        android:textSize="@dimen/text_size_15sp" />
    
    
    <ImageView 
        android:id="@+id/img_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/recommand_more"/>
    

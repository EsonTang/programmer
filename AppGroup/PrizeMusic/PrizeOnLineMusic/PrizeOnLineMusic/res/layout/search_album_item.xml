<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/singer_item_height"
    android:orientation="vertical" >
    
   <ImageView
        android:id="@+id/singerItem_img_id"
        android:layout_width="@dimen/search_singer_item"
        android:layout_height="@dimen/search_singer_item"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
 
   <RelativeLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:layout_toRightOf="@+id/singerItem_img_id">

      <TextView
          android:id="@+id/album_name_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:ellipsize="end"
          android:gravity="center"
          android:singleLine="true"
          android:maxEms="10"
          android:textColor="@color/text_color_323232"
          android:textSize="@dimen/text_size_15sp" />
        
     <TextView
        android:id="@+id/singer_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:layout_below="@+id/album_name_id"
        android:textColor="@color/text_color_969696"
        android:textSize="@dimen/text_size_micro" />
       
   </RelativeLayout>
   
    <ImageView 
        android:id="@+id/img_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/recommand_more"/>
    

</RelativeLayout>

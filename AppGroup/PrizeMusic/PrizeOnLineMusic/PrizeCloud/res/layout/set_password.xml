<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:clipToPadding="false" >
    
    <TextView
        android:id="@+id/title_id"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#21b5c0"
        android:drawableLeft="@drawable/cloud_back_normal"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:onClick="onBackClk"
        android:text="@string/set_password"
        android:textColor="#ffffff"
        android:textSize="@dimen/textsize_large" />
    
    <EditText
        android:id="@+id/password_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/cloud_shurukuang"
        android:gravity="center_vertical"
        android:hint="@string/please_input_password"
        android:paddingLeft="10dp"
        android:textColor="@color/prize_text_default"
        android:textColorHint="#c8c8c8"
        android:textSize="@dimen/textsize_medium"
        android:maxLength="16"
        android:inputType="textPassword"
        android:digits="@string/symbol"
        android:singleLine="true" >
    </EditText>
    
    
    <EditText
        android:id="@+id/confirm_password_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cloud_shurukuang"
        android:gravity="center_vertical"
        android:hint="@string/confirm_password"
        android:paddingLeft="10dp"
        android:textColor="@color/prize_text_default"
        android:textColorHint="#c8c8c8"
        android:textSize="@dimen/textsize_medium"
        android:maxLength="16"
        android:inputType="textPassword"
        android:digits="@string/symbol"
        android:singleLine="true" >
    </EditText>
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textsize_medium"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/text_color_gray"
        android:text="@string/password_tip"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/confirmtn_id"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="27dp"
        android:text="@string/confirm"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/login_color"
        android:gravity="center"
       android:background="@drawable/cloud_next_selector"
        android:clickable="true"
        ></TextView>
</LinearLayout>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="viruseDevide">
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="scanTypeStyle">
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">@dimen/largeTxtSize</item>
    </style>

    <style name="scanTypeSecondStyle">
        <item name="android:textSize">@dimen/smallTxtSize</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#b2b2b2</item>
    </style>

    <style name="scanTypeResultStyle">
        <item name="android:textSize">@dimen/smallTxtSize</item>
        <item name="android:textColor">#323232</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

    <style name="virusLayoutStyle">
        <item name="android:paddingLeft">@dimen/activity_margin_top</item>
        <item name="android:paddingRight">@dimen/activity_margin_bottom</item>
    </style>
    <!-- 垃圾清理 -->
    <style name="garbageTypeStyle">
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">@dimen/largeTxtSize</item>
        <item name="android:drawablePadding">@dimen/scanTypeDrawablePadding</item>
    </style>
    <style name="garbageSizeStyle">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">@dimen/smallTxtSize</item>
        <item name="android:drawablePadding">@dimen/scanTypeDrawablePadding</item>
    </style>
    
     <style name="common_custom_dialog" parent="@android:style/Theme.Dialog"> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@null</item>
    </style>
    
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/optimizing_child_item_padding_top"
    android:paddingBottom="@dimen/optimizing_child_item_padding_bottom"
    android:paddingLeft="@dimen/optimizing_child_item_padding_left"
    android:paddingRight="@dimen/optimizing_child_item_padding_right"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_child_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/optimizing_child_item_padding_right"
        android:src="@drawable/optimizing_item_status" />

    <TextView
        android:id="@+id/tv_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>

                <TextView android:id="@+id/tv_videotesttime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Min"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_videotest"
                    android:layout_alignBottom="@id/et_videotest"
                    android:layout_toRightOf="@id/et_videotest" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mctest"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_mctest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="200"
                    android:background="@drawable/edit_bg"
                    android:layout_toEndOf="@id/tv_reboottest"
                    android:layout_alignBottom="@id/tv_reboottest"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_reboottest" />

                <TextView android:id="@+id/tv_reboottestCysles"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Circles"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_reboottest"
                    android:layout_alignBottom="@id/et_reboottest"
                    android:layout_toRightOf="@id/et_reboottest" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv_testitem">
        <Button android:id="@+id/bt_ok"
            android:layout_height="wrap_content"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            android:onClick="sendMessage"
            android:text="OK"/>

        <Button android:id="@+id/bt_cancel"
            android:layout_height="wrap_content"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_toEndOf="@id/bt_ok"
            android:layout_alignBottom="@id/bt_ok"
            android:text="Cancel"
            android:layout_toRightOf="@id/bt_ok" />

    </RelativeLayout>

</RelativeLayout>

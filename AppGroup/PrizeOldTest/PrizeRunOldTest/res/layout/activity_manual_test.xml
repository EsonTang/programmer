            <RelativeLayout
                android:id="@+id/rl_reboot"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_reboottest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Reboot Test : "

                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_videotest"
                    android:layout_alignBottom="@id/et_videotest"
                    android:layout_toRightOf="@id/et_videotest" />
            </RelativeLayout>

          <RelativeLayout
                android:id="@+id/camera_test"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_cameratest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Camera Test:"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_cameratest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor = "#ff8c00"
                    android:text="180"
                    android:background="@drawable/edit_bg"
                    android:layout_toEndOf="@id/tv_cameratest"
                    android:layout_alignBottom="@id/tv_cameratest"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_cameratest" 
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

                <TextView android:id="@+id/tv_cameratesttime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

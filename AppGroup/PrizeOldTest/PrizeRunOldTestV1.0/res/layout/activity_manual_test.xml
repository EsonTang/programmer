                    android:background="@drawable/edit_bg"
                    android:layout_toEndOf="@id/tv_emmctest"
                    android:layout_alignBottom="@id/tv_emmctest"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_emmctest" 
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

                <TextView android:id="@+id/tv_emmctesttime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Circle"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_emmctest"
                    android:layout_alignBottom="@id/et_emmctest"
                    android:layout_toRightOf="@id/et_emmctest" />
            </RelativeLayout>

         

            <RelativeLayout
                android:id="@+id/rl_srtest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_srtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Sleep Test : "
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_srtest"
                    android:layout_width="80dp"

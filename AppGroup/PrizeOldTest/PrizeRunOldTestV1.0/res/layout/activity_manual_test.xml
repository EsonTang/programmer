                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_cameratest"
                    android:layout_alignBottom="@id/et_cameratest"
                    android:layout_toRightOf="@id/et_cameratest" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reboot"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_reboottest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Reboot Test : "
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_reboottest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor = "#ff8c00"
                    android:text="200"
                    android:background="@drawable/edit_bg"
                    android:layout_toEndOf="@id/tv_reboottest"
                    android:layout_alignBottom="@id/tv_reboottest"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_reboottest"
                    android:textCursorDrawable="@drawable/color_cursor"
                     />

                <TextView android:id="@+id/tv_reboottestCysles"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Circles"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_reboottest"
                    android:layout_alignBottom="@id/et_reboottest"
                    android:layout_toRightOf="@id/et_reboottest" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_ddr"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_ddrtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" DDR Test : "
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_ddrtest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"

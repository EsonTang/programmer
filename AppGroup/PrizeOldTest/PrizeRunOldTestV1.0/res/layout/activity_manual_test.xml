<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <ScrollView
        android:id="@+id/sv_testitem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:divider="@drawable/separate_line"
            android:focusable="true"
             android:scrollbars="vertical"
            
            >

            <RelativeLayout
                android:id="@+id/rl_cputest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_cputest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" CPU Test : "
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_cputest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor = "#ff8c00"
                    android:text="120"
                    android:background="@drawable/edit_bg"
                    android:layout_toEndOf="@id/tv_cputest"
                    android:layout_alignBottom="@id/tv_cputest"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_cputest" 
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

                <TextView android:id="@+id/tv_cputesttime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Min"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_cputest"
                    android:layout_alignBottom="@id/et_cputest"
                    android:layout_toRightOf="@id/et_cputest" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_lcdtest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_lcdtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Lcd Test : "
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_lcdtest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor = "#ff8c00"
                    android:text="120"
                    android:background="@drawable/edit_bg"
                    android:layout_toEndOf="@id/tv_lcdtest"
                    android:layout_alignBottom="@id/tv_lcdtest"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_lcdtest" 
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

                <TextView android:id="@+id/tv_lcdtesttime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Min"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/et_lcdtest"
                    android:layout_alignBottom="@id/et_lcdtest"
                    android:layout_toRightOf="@id/et_lcdtest" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_3dtest"
                android:layout_width="wrap_content"

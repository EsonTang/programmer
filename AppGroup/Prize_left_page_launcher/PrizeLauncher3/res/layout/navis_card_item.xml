<?xml version="1.0" encoding="utf-8"?>  
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:card_view="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="horizontal"  
    style="@style/left_card_style"
    card_view:cardCornerRadius="@dimen/card_corner"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/card_bg_color"
    >  
  
    <RelativeLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        style="@style/left_card_relative_style"
        android:paddingBottom="@dimen/dp_10"
        >  
  		<include layout="@layout/card_title_with_btn" />
        
        <com.prize.left.page.ui.NoScroolGridView android:layout_width="match_parent"  
    		android:layout_height="wrap_content"
    		android:layout_below="@id/card_title"
    		android:id="@+id/content"
    		android:paddingLeft="@dimen/card_content_pad"
    		android:paddingRight="@dimen/card_content_pad" 
    		android:numColumns="5"
    		android:verticalSpacing="@dimen/grid_vertical_vertical_pad"
    		android:scrollbars="none"
    		android:layout_marginTop="@dimen/dp_16"
    		android:layout_marginBottom="@dimen/dp_16"
    		android:layout_marginLeft="2dp"
    		android:layout_marginRight="2dp"
    		/>
    </RelativeLayout>
  
</android.support.v7.widget.CardView>
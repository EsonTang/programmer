<?xml version="1.0" encoding="utf-8"?>  
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:card_view="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="horizontal"  
    style="@style/left_card_style"
    card_view:cardCornerRadius="@dimen/card_corner"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/card_bg_color"
    >  
  
    <RelativeLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        >  
  		<include layout="@layout/card_title_with_expand" /> 
        
        <com.prize.left.page.ui.NoScroolGridView android:layout_width="match_parent"  
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/card_title"
    		android:id="@+id/content"
    		android:numColumns="4"
    		android:verticalSpacing="@dimen/grid_vertical_vertical_pad"
    		android:scrollbars="none"
    		style="@style/left_card_linearlay_style"
    		android:paddingBottom="@dimen/search_left_margin"
    		android:paddingTop="@dimen/news_item_vertical_pad"
    		android:paddingLeft="0dp"
    		/>
    </RelativeLayout>
  
</android.support.v7.widget.CardView>
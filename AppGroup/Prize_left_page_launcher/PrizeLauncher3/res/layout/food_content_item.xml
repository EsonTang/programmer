<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView android:contentDescription="@null"
        android:id="@+id/img_food_ico"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/news_item_img_end"
        style="@style/food_left_img_style"
        />
    
    <TextView android:layout_toEndOf="@id/img_food_ico"
        android:layout_toStartOf="@+id/txt_icon"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        style="@style/news_title_style"
        />
    
    <TextView android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:id="@+id/txt_icon"
        style="@style/foods_describ_style"
        />
    
    <TextView android:layout_toEndOf="@id/img_food_ico"
        android:layout_below="@id/txt_name"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:id="@+id/txt_substract"
        style="@style/foods_describ_style"
        />
    
    <TextView android:layout_toEndOf="@id/img_food_ico"
        android:layout_below="@+id/txt_substract"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:id="@+id/txt_price"
        android:text="4.5"
        />
    
    <TextView android:layout_toEndOf="@id/txt_price"
        android:layout_below="@id/txt_substract"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hint"
        android:gravity="right"
        android:layout_alignParentRight="true"
        style="@style/foods_describ_style"
        />
    
	<View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"
        android:layout_marginTop="@dimen/news_item_vertical_pad"
        android:layout_marginBottom="@dimen/news_item_vertical_pad"
        android:layout_below="@id/txt_hint"
        />
</RelativeLayout>

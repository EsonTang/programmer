<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:card_view="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="horizontal"  
    style="@style/left_card_style"
    card_view:cardCornerRadius="@dimen/card_corner"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/card_bg_color"
    android:id="@+id/footer_lay_add"
    >
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_add_card"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="@string/str_add_card"
        android:visibility="gone"
        style="@style/card_name_style"
        android:background="@drawable/left_item_click_selector"
        />
</android.support.v7.widget.CardView>
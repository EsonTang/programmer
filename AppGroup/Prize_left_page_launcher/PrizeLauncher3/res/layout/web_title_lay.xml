<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height_47dp"
    android:background="@color/status_color"
    android:id="@+id/title_lay"
    >
    
    <ImageView android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height_47dp"
        android:src="@drawable/action_bar_back_selector"
        android:id="@+id/btn_back"
        android:contentDescription="@null"
        android:onClick="onClick"
        android:paddingLeft="10dp"
        android:scaleType="centerInside"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height_47dp"
        android:layout_toRightOf="@id/btn_back"
        android:layout_toLeftOf="@+id/btn_refresh"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:id="@+id/tv_title"
        style="@style/title_txt_style"
        android:layout_marginLeft="19dp"
        />
    
    <ImageView android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height_47dp"
        android:src="@drawable/web_btn_reload_selector"
        android:id="@+id/btn_refresh"
        android:contentDescription="@null"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:paddingRight="10dp"
        android:scaleType="centerInside"
        />
</RelativeLayout>

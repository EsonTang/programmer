<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imgview_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.example.longshotscreen.ui.PathEffectsImageView
        android:id="@+id/imgview_patheffects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/lasso_guide"
        android:textColor="@color/white"
        android:textSize="19.0sp" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="70"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_action"
        android:layout_width="fill_parent"
        android:layout_height="54.0dip"
        android:layout_alignParentBottom="true"
        android:background="#cc000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lassoshot_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/exit"
            android:gravity="center_horizontal"
            android:text="@string/exit"
            android:textSize="@dimen/action_text_size"
            android:textColor="@color/funnyshot_text_color" />

        <TextView
            android:id="@+id/lassoshot_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/redo"
            android:gravity="center_horizontal"
            android:text="@string/redo"
            android:textSize="@dimen/action_text_size"
            android:textColor="@color/funnyshot_text_color" />

        <TextView
            android:id="@+id/lassoshot_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/save"
            android:gravity="center_horizontal"
            android:text="@string/save"
            android:textSize="@dimen/action_text_size"
            android:textColor="@color/funnyshot_text_color" />
    </LinearLayout>

</RelativeLayout>
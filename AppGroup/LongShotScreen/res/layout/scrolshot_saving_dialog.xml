<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_backgroud"
    android:minWidth="@dimen/play_vedia_layout_min_height"
    android:orientation="vertical"
    android:paddingBottom="@dimen/play_vedia_barlayout_pading_bottom"
    android:paddingTop="@dimen/play_vedia_barlayout_pading_top" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52.0dip"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/play_vedia_barlayout_title_maginTop"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/scrollcapture_is_running"
            android:textColor="@color/gray"
            android:textSize="18.0sp" />

        <ImageView
            android:id="@+id/titleDivider"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:gravity="fill_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_splite_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_message"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="60.0dip"
        android:paddingBottom="23.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingTop="20.0dip"
        android:text="@string/scrollcapture_is_saving_please_wait"
        android:textColor="@color/gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/play_vedia_barlayout_magin_bottom"
        android:measureWithLargestChild="true"
        android:minHeight="@dimen/play_vedia_barlayout_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/longshot_saving_ok"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/play_vedia_barlayout_btn_pading"
            android:layout_marginRight="@dimen/play_vedia_barlayout_btn_pading"
            android:layout_weight="1.0"
            android:background="@drawable/dialog_btn"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@android:string/ok"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_Rlyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/big_Iv"
        style="@style/push_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/update_btn"
        style="@style/game_item_progressButton"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/push_btn_selector"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/nessary_install"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_micro" />

    <LinearLayout
        android:id="@+id/content_Llyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/big_Iv"
        android:layout_alignTop="@+id/big_Iv"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-3dp"
        android:layout_toLeftOf="@id/update_btn"
        android:layout_toRightOf="@+id/big_Iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/child_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="bottom"
            android:orientation="horizontal" />
    </LinearLayout>
</RelativeLayout>
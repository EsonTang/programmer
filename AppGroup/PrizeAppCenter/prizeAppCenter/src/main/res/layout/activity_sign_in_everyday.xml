<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/signin_background"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sign_in_title"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/score_description_1"
                    android:layout_width="0px"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/score_description_2"
                    android:layout_width="0px"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/score_description_3"
                    android:layout_width="0px"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/sign_in_bt"
                android:clickable="true"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_signin_selector"
                android:textSize="@dimen/text_size_36"/>

            <TextView
                android:id="@+id/sign_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_fefefe"
                android:textSize="@dimen/text_size_22"/>

            <TextView
                android:id="@+id/goto_points_mall_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/go_to_points_mall"
                android:textColor="#fff100"
                android:textSize="@dimen/text_size_20"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/text_color_fefefe"/>

        <com.prize.appcenter.ui.widget.CenterDrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/signin_rule_left_drawable"
            android:drawablePadding="5dp"
            android:text="@string/sign_in_rule"
            android:textColor="@color/text_color_fefefe"
            android:textSize="@dimen/text_size_26"/>

        <com.prize.appcenter.ui.widget.ScrollListView
            android:id="@+id/rules_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        </com.prize.appcenter.ui.widget.ScrollListView>
    </LinearLayout>
</ScrollView>
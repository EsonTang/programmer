<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_content_Rlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_gift" />

        <TextView
            android:id="@+id/gift_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gift_name"
            android:layout_alignTop="@+id/gift_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gift_name"
            android:textColor="@color/text_color_262626"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/state_Btn"
            style="@style/gift_copy_btn_item"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_copy_bg_selector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/copy"
            android:textColor="@color/textcolor_ff7500"
            android:textSize="@dimen/text_size_micro" />

        <TextView
            android:id="@+id/gift_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gift_name_tv"
            android:layout_below="@+id/gift_name_tv"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/state_Btn"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_737373"
            android:textSize="@dimen/text_size_micro" />
    </RelativeLayout>

    <View
        android:id="@+id/game_image_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/bg_gray_color" />

</LinearLayout>
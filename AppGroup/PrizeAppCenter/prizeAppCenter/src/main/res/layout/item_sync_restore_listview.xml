<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/sync_restore_item_container_Rlyt"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:minHeight="70dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <com.prize.appcenter.ui.widget.CornerImageView
            android:id="@+id/sync_restore_item_icon"
            style="@style/game_item_image"
            android:layout_centerVertical="true"
            android:contentDescription="@string/alert_title"
            android:src="@drawable/default_icon" />

        <RelativeLayout
            android:id="@+id/game_layout"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/sync_restore_item_ckbx"
            android:layout_toRightOf="@id/sync_restore_item_icon"
            android:paddingRight="14dp" >

            <TextView
                android:id="@+id/sync_restore_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="i酷市场"
                android:textColor="@color/text_color_404040"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sync_restore_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sync_restore_item_title"
                android:ellipsize="end"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:text="MB"
                android:textColor="@color/text_color_9a9a9a"
                android:textSize="@dimen/text_size_min" />
        </RelativeLayout>

        <!--
             <CheckBox
            android:id="@+id/sync_restore_item_ckbx"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="13dp" />
        -->

        <ImageView
            android:id="@+id/sync_restore_item_ckbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_pressed"
            android:paddingRight="13dp" />
    </RelativeLayout>

    <View
        android:id="@+id/game_image_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_gray_color" />

</LinearLayout>
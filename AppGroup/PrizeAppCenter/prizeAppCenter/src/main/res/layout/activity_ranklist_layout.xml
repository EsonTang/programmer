<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <View
        android:id="@+id/slidingviewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/bg_head_gray_color" />

    <com.prize.appcenter.ui.util.PagerSlidingTabStripExtends
        android:id="@+id/slidingtabs"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:pstsTabPaddingLeftRight="10dp"
        app:pstsSelectedTabTextColor="@color/text_color_blue"
        app:pstsSelectedTabTextSize="@dimen/text_size_26"
        app:pstsUnderlineHeight="@dimen/zero_point_five_dp"
        app:pstsTabTextColor="@color/text_color_gray"
        app:pstsTabTextSize="@dimen/text_size_26" />

    <android.support.v4.view.ViewPager
        android:id="@+id/slidingpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slidingtabs" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_background">


    <TextView
        android:id="@+id/feedback_footer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/feedback_to_more_btn_rlyt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/feedback_more"
        android:textColor="@color/text_color_9fa6af"
        android:textSize="@dimen/text_size_min"/>

    <RelativeLayout
        android:id="@+id/feedback_to_more_btn_rlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_point_five_dp"
            android:layout_above="@+id/feedback_to_more_btn"
            android:background="#e4e4e4"/>

        <TextView
            android:id="@+id/feedback_to_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_corner_selector"
            android:gravity="center"
            android:text="@string/feedback_need_more"
            android:textColor="@color/text_color_404040"
            android:textSize="@dimen/text_size_small"/>
    </RelativeLayout>
</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height_60dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:paddingLeft="13dp"
    android:paddingTop="22dp">

    <TextView
        android:id="@+id/searchKey_Tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/bg_commonhead_search"
        android:drawableLeft="@drawable/search_icon"
        android:drawablePadding="12dp"
        android:gravity="left|center_vertical"
        tools:text="腾讯"
        android:paddingLeft="15dp"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/text_size_micro" />

    <RelativeLayout
        android:id="@+id/download_queue_Rlyt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/updateNum_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_download_selector"
            android:gravity="center"
            android:paddingTop="1.5dp"
            android:textColor="@color/text_color_ff511b"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/download_queue_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_download_default_selector" />
    </RelativeLayout>
</LinearLayout>


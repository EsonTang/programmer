<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/Rlyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_73dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp" >

        <com.prize.appcenter.ui.widget.CornerImageView
            android:id="@+id/game_iv"
            style="@style/gift_item_image"
            android:layout_centerVertical="true"
            android:contentDescription="@string/alert_title"
            android:src="@drawable/default_icon" />

        <com.prize.appcenter.ui.widget.ProgressButton
            android:id="@+id/game_download_btn"
            style="@style/game_item_progressButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/game_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/game_download_btn"
            android:layout_toRightOf="@+id/game_iv"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/game_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_262626"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/numGift_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_color_737373"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/apk_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_color_737373"
                    android:textSize="@dimen/text_size_micro" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/game_image_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:layout_below="@+id/Rlyt"
        android:background="@color/bg_gray_color" />

    <com.prize.appcenter.ui.widget.ScrollListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/game_image_tag"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:descendantFocusability="blocksDescendants"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:fastScrollAlwaysVisible="false"
        android:fastScrollEnabled="false"
        android:focusable="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:scrollbars="none"
        android:touchscreenBlocksFocus="true" >
    </com.prize.appcenter.ui.widget.ScrollListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_gray_color" />

</RelativeLayout>
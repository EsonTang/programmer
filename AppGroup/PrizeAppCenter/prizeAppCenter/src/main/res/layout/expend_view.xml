<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <TextView
        android:id="@+id/app_introduce_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_detail_title"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:text="@string/app_introduce"
        android:textColor="@color/text_color_404040"
        android:textSize="@dimen/text_size_30" />

    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_introduce_id"
        android:layout_below="@+id/app_introduce_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/text_color_6c6c6c"
            android:textSize="@dimen/text_size_26"/>

        <ImageView
            android:id="@+id/expand_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:src="@drawable/detail_down_selector"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
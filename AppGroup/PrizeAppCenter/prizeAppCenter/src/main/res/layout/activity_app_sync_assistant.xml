<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_f5f5f5">

    <RelativeLayout
        android:id="@+id/sync_assistant_Rlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sync_assistant_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sync_assistant_last_update_llyt"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@id/sync_assistant_Rlyt"
        android:background="@drawable/app_sync_last_time_bg" >

        <TextView
            android:id="@+id/sync_assistant_go_on_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="5dp"
            android:text="@string/sync_assistant_go_on"
            android:textColor="@color/text_color_12b7f5"
            android:textSize="13dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sync_assistant_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/sync_assistant_desc"
            android:textColor="@color/textcolor_9e9e9e"
            android:textSize="13dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sync_assistant_last_update_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/sync_assistant_desc_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:textColor="@color/textcolor_9e9e9e"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/sync_assistant_update_time_show_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sync_assistant_desc"
            android:textColor="@color/textcolor_9e9e9e"
            android:textSize="13dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sync_assistant_last_update_llyt"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sync_assistant_backup_app_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_sync_assistant_btn_selector"
            android:gravity="center"
            android:text="备份应用到云端"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sync_assistant_restore_app_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/app_sync_assistant_btn_selector"
            android:gravity="center"
            android:text="恢复应用到本机"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>
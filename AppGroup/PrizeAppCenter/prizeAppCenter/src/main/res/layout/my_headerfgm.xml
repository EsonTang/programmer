<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <RelativeLayout
        android:id="@+id/myhead_id"
        android:layout_width="match_parent"
        android:layout_height="205dp">

        <ImageView
            android:id="@+id/app_icon_id"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <RatingBar
            android:id="@+id/ratingBar_id"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/app_icon_id"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/brief_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/app_icon_id"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/app_icon_id"
            android:text="briefaaaaaaaaaa" />

        <TextView
            android:id="@+id/downloadTimes_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brief_id"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/app_icon_id"
            android:text="download" />

        <TextView
            android:id="@+id/appSize_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/downloadTimes_id"
            android:layout_alignBottom="@+id/downloadTimes_id"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/downloadTimes_id"
            android:text="size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/downloadTimes_id"
            android:layout_below="@+id/app_icon_id">

            <TextView
                android:id="@+id/official_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/safe_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/ad_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
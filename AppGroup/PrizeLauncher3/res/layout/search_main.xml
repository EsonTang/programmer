<com.android.launcher3.search.SearchLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_main_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <com.android.launcher3.search.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="@string/search_hint"
        android:singleLine="true"
        android:textSize="15.0dip" />

    <com.android.launcher3.search.MyExpandableListView
        android:id="@+id/my_expand_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:childDivider="#5f5b5b"
        android:divider="#5f5b5b"
        android:dividerHeight="0.1px" />

</com.android.launcher3.search.SearchLinearLayout>
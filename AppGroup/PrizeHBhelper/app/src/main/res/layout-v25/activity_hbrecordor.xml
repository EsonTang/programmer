<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recorder_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.lpserver.HBRecordorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recorder_background"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/notification_bar_height" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height">

            <ImageButton
                android:id="@+id/recorder_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/prize_actionbar_back_button_margin_left"
                android:background="@drawable/recorder_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/recorder"
                android:textColor="@color/white"
                android:textSize="@dimen/header_textsize" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/total_margin_top"
            android:gravity="center_horizontal"
            android:text="@string/total_money"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sum_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150.00"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sum_textsize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sum_item_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/item_image_margin"
                        android:background="@drawable/mount" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_side_margin"
                        android:layout_toRightOf="@id/image1"
                        android:text="@string/success_get"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/record_item_textsize" />

                    <TextView
                        android:id="@+id/count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text1"
                        android:layout_below="@id/text1"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:text="10"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/record_item_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text1"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:layout_toRightOf="@id/count_textView"
                        android:text="@string/count"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/record_item_textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_between_margin"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/header_side_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/item_image_margin"
                        android:background="@drawable/asume_time" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_side_margin"
                        android:layout_toRightOf="@id/image2"
                        android:text="@string/ave_tiem"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/record_item_textsize" />

                    <TextView
                        android:id="@+id/second_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text2"
                        android:layout_below="@id/text2"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:text="5.2"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/record_item_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text2"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:layout_toRightOf="@id/second_textView"
                        android:text="@string/second"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/record_item_textsize" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/listview_margin_top"
        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/devider_color" />

        <TextView
            android:id="@+id/no_recorder_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_recordor"
            android:textSize="@dimen/textsize_15"
            android:visibility="gone" />

        <ListView
            android:id="@+id/hb_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:divider="@color/devider_color"
            android:scrollbars="none"
            android:dividerHeight="@dimen/divider_height" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/devider_color" />

    <LinearLayout
        android:id="@+id/clearView_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clearButton_line_height"
        android:divider="@color/devider_color"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/clearView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_clear_data"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clear_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/delete_not" />

            <TextView
                android:id="@+id/clear_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/clear_recordor"
                android:textSize="@dimen/clear_record_textsize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/reminder"
        android:textColor="#FFFF5100"
        android:textSize="@dimen/prize_hint_text_size" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/text0"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/first_sentence"
        android:textSize="@dimen/prize_hint_text_size" />
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/text0"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/fifth_sentence"
        android:textSize="@dimen/prize_hint_text_size" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text1"
        android:layout_below="@id/text6"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/second_sentence"
        android:textSize="@dimen/prize_hint_text_size" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text6"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/text2"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/more"
        android:textSize="@dimen/prize_hint_text_size"
        android:textColor="@color/prize_more_question_text_color"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text2"
        android:layout_below="@id/text2"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/third_sentence"
        android:textSize="@dimen/prize_hint_text_size" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text3"
        android:layout_below="@id/text3"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/fourth_sentence"
        android:textSize="@dimen/prize_hint_text_size"
        android:paddingBottom="@dimen/prize_hint_padding_bottom"/>

</RelativeLayout>
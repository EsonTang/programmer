<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.test.MainActivity" 
    android:orientation="vertical"
    android:layout_marginTop="10dp">
  
    <View 
        android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="#f0f0f0"
        android:layout_marginBottom="8dp"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
       <ImageView 
           android:id="@+id/music_icon"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/ic_launcher"
           android:layout_marginRight="10dp"/>t
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp">
            <TextView 
                android:id="@+id/music_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="德玛西亚"/>
            <TextView
                android:id="@+id/music_writer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="许嵩"
                android:layout_marginTop="10dp"/>
            
        </LinearLayout>
       
           <ImageButton
                    android:id="@+id/mbtn_play_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_prev_selector" />

                <ImageButton
                    android:id="@+id/mbtn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dip"
                    android:background="@drawable/btn_pause_selector" />

                <ImageButton
                    android:id="@+id/mbtn_play_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dip"
                    android:background="@drawable/btn_next_selector" />
    </LinearLayout>
     <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>
      <View 
        android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="#f0f0f0"
        android:layout_marginTop="8dp"/>
</LinearLayout>
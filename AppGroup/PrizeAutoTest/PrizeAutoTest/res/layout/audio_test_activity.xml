<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_audio_mic"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/btn_audio_mic"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_audio_player"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/btn_audio_player"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_audio_receiver"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/btn_audio_receiver"
            android:textSize="20sp" />
			
	    <Button
            android:id="@+id/button_audio_headset"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/btn_audio_headset"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
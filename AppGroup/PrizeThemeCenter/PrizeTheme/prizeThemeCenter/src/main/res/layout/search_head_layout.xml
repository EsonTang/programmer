<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/verticalSpacing5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/search_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_back_selector"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_edittext"
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:textColor="@color/text_color_323232"
                android:textColorHint="@color/text_color_737373"
                android:textCursorDrawable="@null"
                android:hint="@string/search_edittext_hint"
                android:textSize="@dimen/textsize_small" />

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/iv_delete_bg"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:background="#ededed" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_search_selector" />
    </LinearLayout>

</LinearLayout>
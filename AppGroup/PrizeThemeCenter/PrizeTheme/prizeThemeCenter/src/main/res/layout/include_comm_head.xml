<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="24dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:gravity="center_vertical" >
        
        <TextView
            android:id="@+id/searchKey_Tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searchkey_backage"
            android:gravity="left|center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="15dp"
            android:textColor="@color/text_color_969696"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/searchkey_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right"/>
     
    </RelativeLayout>

    <View
        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:layout_marginTop="@dimen/padding10dp"
        android:background="@color/bg_gray_color"
        android:visibility="invisible"/>
</LinearLayout>
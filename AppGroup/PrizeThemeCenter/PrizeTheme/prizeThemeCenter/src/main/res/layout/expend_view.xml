<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <TextView
        android:id="@+id/app_introduce_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="主题简介"
        android:textColor="@color/text_color_404040"
        android:textSize="15dp"/>
    <TextView
       android:layout_alignParentRight="true"
        android:id="@+id/expand_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-5dp"
        android:drawableRight="@drawable/detail_down_selector"
        android:visibility="visible"/>
    <LinearLayout
        android:paddingRight="@dimen/margin_end_15dp"
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_introduce_id"
        android:layout_below="@+id/app_introduce_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/text_color_9a9a9a"
            android:textSize="@dimen/text_size_small">
        </TextView>


    </LinearLayout>

</RelativeLayout>
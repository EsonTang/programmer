<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/RL_item"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <com.prize.prizethemecenter.ui.widget.CornerImageView
            android:id="@+id/image_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_theme" />

        <RelativeLayout
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16.5dp"
            android:layout_toRightOf="@+id/image_iv">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="清凉"
                android:textColor="@color/text_color_404040"
                android:textSize="15dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="3.1M/s"
                        android:textColor="@color/textcolor_969696"
                        android:textSize="12dp" />
                    <View
                        android:layout_width="@dimen/topic_margin_20dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="酷比手机"
                        android:textColor="@color/textcolor_969696"
                        android:textSize="12dp" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

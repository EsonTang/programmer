<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical" >

        <com.prize.prizethemecenter.ui.widget.GridViewWithHeaderAndFooter
            android:id="@+id/classify_id_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:scrollbars="none"
            android:listSelector="@color/transparent"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="-25dp">
        </com.prize.prizethemecenter.ui.widget.GridViewWithHeaderAndFooter>

 <RelativeLayout
    android:id="@+id/action_bar_topic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/white"
    android:paddingTop="25dp" >

    <RelativeLayout
        android:id="@+id/topic_actionbar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height_47dp" >

        <ImageButton
            android:id="@+id/action_bar_back_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/detail_white_back_selector" />

        <TextView
            android:id="@+id/action_bar_title_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/action_bar_back_topic"
            android:paddingBottom="0dip"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/text_size_medium" />


        <TextView
            android:id="@+id/action_bar_menu_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/bar_search_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@id/action_bar_menu_right"
            android:background="@drawable/detail_white_search_selector" />

         </RelativeLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/container_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</FrameLayout>
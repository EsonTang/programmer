<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cloud_radius_img"
    android:layout_marginLeft="20dp"
	android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
 		android:textColor="@color/prize_text_default"
 		android:textSize="@dimen/textsize_large"
        android:text="@string/modify_nickname" />

     <TextView
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/prize_line"/>
    <EditText
        android:id="@+id/edit_nickname_id"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center"
 		android:gravity="bottom"
        android:maxLength="14"
        android:singleLine="true"
        android:textColorHint="#c8c8c8"
        android:background="@null"
        android:textColor="@color/prize_text_default"
        android:paddingLeft="47dp"
        android:textSize="@dimen/textsize_medium" >
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"   
        android:background="@drawable/cloud_dialog_edit_line"/>
    <TextView
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="17dp"
	    android:background="@color/prize_line"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="85dp" >

         <Button
            android:id="@+id/cancel_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margintop"
            android:layout_marginBottom="@dimen/btn_margintop"
            android:textSize="@dimen/textsize_medium"
            android:textColor="@color/prize_text_default"
            android:background="@drawable/cloud_btn_cancel_selector"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="@string/cancel" />
        <Button
            android:id="@+id/sure_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margintop"
            android:layout_marginBottom="@dimen/btn_margintop"
            android:textSize="@dimen/textsize_medium"
            android:textColor="@color/prize_text_default"
            android:background="@drawable/cloud_btn_sure_selector"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="@string/confirm"/>

    </LinearLayout>
</LinearLayout>

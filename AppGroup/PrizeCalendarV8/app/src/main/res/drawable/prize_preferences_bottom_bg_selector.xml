<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="@dimen/prize_preferences_bg_margin1"
        android:right="@dimen/prize_preferences_bg_margin1"
        android:top="@dimen/prize_preferences_bg_margin3">
        <selector
            android:visible="true">
            <item
                android:state_focused="false"
                android:state_pressed="false">
                <shape>
                    <stroke
                        android:width="@dimen/prize_preferences_bg_stroke_height"
                        android:color="@color/prize_preferences_bg_color_gray"/>
                    <solid
                        android:color="@color/prize_preferences_bg_solid_color"/>
                    <size
                        android:height="@dimen/prize_preferences_bg_height2"/>
                    <corners
                        android:bottomLeftRadius="@dimen/prize_preferences_bg_corners"
                        android:bottomRightRadius="@dimen/prize_preferences_bg_corners"/>
                </shape>
            </item>
            <item
                android:state_pressed="true">
                <shape>
                    <stroke
                        android:width="@dimen/prize_preferences_bg_stroke_height"
                        android:color="@color/prize_preferences_bg_color_gray"/>
                    <solid
                        android:color="@color/prize_preferences_bg_solid_color_pressed"/>
                    <size
                        android:height="@dimen/prize_preferences_bg_height2"/>
                    <corners
                        android:bottomLeftRadius="@dimen/prize_preferences_bg_corners"
                        android:bottomRightRadius="@dimen/prize_preferences_bg_corners"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
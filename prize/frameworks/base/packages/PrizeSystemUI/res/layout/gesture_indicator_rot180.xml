<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gesture_indicator_rot180"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/left_gesture_indicator"
        android:layout_width="@dimen/left_gesture_indicator_length"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:src="@drawable/left_gesture_indicator"/>
    
    <ImageView
        android:id="@+id/center_gesture_indicator"
        android:layout_width="@dimen/center_gesture_indicator_length"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:src="@drawable/center_gesture_indicator"/>
    
    <ImageView
        android:id="@+id/right_gesture_indicator"
        android:layout_width="@dimen/right_gesture_indicator_length"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:src="@drawable/right_gesture_indicator"/>


</LinearLayout>

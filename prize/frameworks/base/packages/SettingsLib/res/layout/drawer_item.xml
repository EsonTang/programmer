<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:orientation="horizontal" >

    <!-- Modify by zhudaopeng at 2016-12-27 Start -->
    <!--<ImageView
        android:id="@android:id/icon"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:tint="?android:attr/colorAccent"
        android:paddingStart="16dp"
        android:paddingEnd="32dp" />-->

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp" />
    <!-- Modify by zhudaopeng at 2016-12-27 End -->

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?android:attr/colorControlNormal"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <!-- Add by zhudaopeng at 2016-11-24 Start -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/im_arrow_reminders"
                style="@style/right_arrow"
                android:src="@drawable/prize_go_to_setting" />

            <Switch
                android:id="@+id/dashboard_switch"
                style="@style/right_arrow"
                android:background="@null"
                android:clickable="false"
                android:focusable="false" />
    </LinearLayout>
	<!-- Add by zhudaopeng at 2016-11-24 End -->
</LinearLayout>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/other_settings_title" >
        
     <PreferenceCategory android:key="common_settings_category"
            android:title="@string/common_settings_category">
		<!-- Date & Time -->
        <Preference
                android:key="date_time_settings"                
                android:title="@string/date_and_time_settings_title" 
                android:fragment="com.android.settings.DateTimeSettings"/>
        <!-- Language -->
        <Preference
                android:key="language_settings"
                android:title="@string/language_settings" 
                android:fragment="com.android.settings.inputmethod.InputMethodAndLanguageSettings"/>
        <!-- Storage -->
        <Preference
                android:key="storage_settings"
                android:title="@string/storage_settings" 
                android:fragment="com.android.settings.deviceinfo.StorageSettings"/>
        <Preference
                android:key="application_management_settings"
                android:title="@string/application_management_settings_title" 
                android:fragment="com.android.settings.PrizeApplicationManagementSettings"/>
        <Preference
                android:key="pure_manage_settings"
                android:title="@string/pure_manage_settings_title" >
                <intent android:action="com.android.purebackground_BOOT" />
        </Preference>
        

     </PreferenceCategory>
     <PreferenceCategory android:key="other_settings_category"
            android:title="@string/other_settings_title">

        <Preference
                android:key="accessibility_settings"
                android:title="@string/accessibility_title" 
                android:fragment="com.android.settings.accessibility.AccessibilitySettings"/>
        <Preference
                android:key="print_settings"
                android:title="@string/print_settings" 
                android:fragment="com.android.settings.print.PrintSettingsFragment"/>
        <!-- Backup and reset -->
        <Preference
                android:key="privacy_settings"
                android:title="@string/privacy_settings" 
                android:fragment="com.android.settings.PrivacySettings"/>

     </PreferenceCategory>
</PreferenceScreen> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- header text ('Enter Pin') -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/prize_applock_ciphersimple_header_input"
        android:textSize="15sp"
        android:textColor="@color/prize_dashboard_tile_textcolor"/>

    <!-- dots -->
    <com.android.settings.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="153dp"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/prize_pattern_select"
        android:visibility="gone"
        android:text="@string/prize_applock_ciphersimple_continue"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_other_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:singleLine="true"
        android:text="@string/prize_applock_ciphersimple_other"
        android:textSize="16sp"
        android:textColor="#3478f6"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DCDCDC" />

    <com.android.settings.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:gravity="center"
        app:keypadButtonSize="72dp"
        app:keypadTextSize="28sp"
        app:keypadShowDeleteButton="true"
        app:keypadTextColor="#323232" />

</LinearLayout>
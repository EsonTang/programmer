            android:layout_marginTop="@dimen/gridview_paddingtop_prize" >
            <LinearLayout
                android:id="@+id/wallLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="8dp" >
                    <ImageView
                        android:id="@+id/wallImage" 
                        android:layout_width="150dp"
                        android:layout_height="270dp"/>
                    <!--  android:src="@drawable/prize_photo" -->
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallpaper_settings_title"
                        android:layout_marginTop="@dimen/gridview_paddingtop_prize"
                        android:layout_marginBottom="@dimen/padding_default_prize"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/photoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp" >
                    <ImageView 
                        android:id="@+id/photo"
                        android:layout_width="150dp"
                        android:layout_height="270dp"
                        android:background="@drawable/prize_photo_background"/>
                    <!-- prize_photo_background -->
                    <TextView 
                        android:id="@+id/photoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prize_photo_album"
                        android:layout_marginTop="@dimen/gridview_paddingtop_prize"
                        android:layout_marginBottom="@dimen/padding_default_prize"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

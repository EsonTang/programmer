<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout   
         xmlns:android="http://schemas.android.com/apk/res/android"   
         android:layout_height="wrap_content"   
         android:layout_width="fill_parent">

         <com.android.settings.wallpaper.PrizeImageView   
               android:id="@+id/item_img"
               android:layout_height="184dp"                    
               android:layout_width="wrap_content"   
               android:layout_centerHorizontal="true"/>    
         <TextView  
               android:layout_width="wrap_content"
               android:layout_below="@+id/item_img"   
               android:layout_height="wrap_content"   
               android:layout_centerHorizontal="true"  
               android:textSize="@dimen/text_size_small"
               android:ellipsize="end"
               android:singleLine="true"
               android:id="@+id/item_text"
               android:layout_marginTop="2dp">  
         </TextView>
         <!-- prize-add-v8.0_wallpaper-yangming-2017_7_20-start -->
         <TextView 
               android:id="@+id/item_textview"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/item_text"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:background="@drawable/prize_setting_app_button_background"
               android:layout_centerHorizontal="true"
               android:text="@string/apply"
               android:textSize="@dimen/text_size_small"
               android:textColor="#3478f6"/>
         <!-- prize-add-v8.0_wallpaper-yangming-2017_7_20-end -->  
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/power_master_dialog_shape"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp" >

            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/title_icon"
                android:textColor="#323232"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="325dp"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/power_master_title_line" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#323232"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/power_master_line"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/power_master_dialog_positive_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#323232"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/power_master_dialog_negative_selector"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#323232"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
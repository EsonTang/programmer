<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/online_wallpaper_button_height"
	        android:orientation="vertical"
	        android:scrollbars="none">
	        <!-- android:background="@drawable/prize_wall_paper_top_corner" -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/prize_system_wallpaper"
                android:textColor="@color/text_color_3478f6"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="@dimen/padding_default_prize"
                android:layout_marginTop="10dp"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_vertical_spacing"
                android:layout_marginLeft="@dimen/padding_default_prize"
                android:layout_marginRight="@dimen/padding_default_prize"
                android:background="@color/prize_wallpaper_gray"/>
            <com.android.settings.wallpaper.MyGridView
	            android:id="@+id/wallpaper_gridview"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"	
	            android:paddingTop="@dimen/gridview_paddingtop_prize"
	            android:paddingEnd="@dimen/padding_default_prize"
    		    android:paddingStart="@dimen/padding_default_prize"       
	            android:gravity="center"
	            android:horizontalSpacing="10dp"
	            android:verticalSpacing="5dp"
	            android:numColumns="3"
	            android:stretchMode="columnWidth"
	            android:scrollbars="none"/>
            <!-- add    android:scrollbars="none"-->
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/online_wallpaper_button_height"
            android:layout_alignParentBottom="true"
            android:background="#fafafa">
            <!-- 
            android:gravity="center"
            android:background="@color/prize_wallpaper_white" -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_vertical_spacing"
                android:background="@color/prize_wallpaper_gray"/>
            <TextView 
                android:id="@+id/wallpapaerstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prize_wallpaper_online"
                android:textColor="@color/text_color_3478f6"
                android:textSize="@dimen/text_size_large"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>    

    </RelativeLayout>
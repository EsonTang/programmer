<?xml version="1.0" encoding="utf-8"?>
<!-- Nav bar color customized feature. prize-linkh-2017.07.11 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/swipe_up_gesture_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/swipe_up_gesture_style_1_back"
            android:layout_width="0dp"
            android:src="@drawable/swipe_up_gesture_back"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:clickable="true"/>
          
        <ImageView
            android:id="@+id/swipe_up_gesture_style_1_home"
            android:layout_width="0dp"
            android:src="@drawable/swipe_up_gesture_home"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:clickable="true"/>
              
        <ImageView
            android:id="@+id/swipe_up_gesture_style_1_recent_apps"
            android:layout_width="0dp"
            android:src="@drawable/swipe_up_gesture_recent_apps" 
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:clickable="true"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/swipe_up_gesture_style_1_text"
        android:layout_below = "@id/swipe_up_gesture_style_1"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/swipe_up_gesture_style_1_text_1"
            android:layout_width="0dp"
            android:text="@string/swipe_up_gesture_text_1"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"/>
          
        <TextView
            android:id="@+id/swipe_up_gesture_style_1_text_2"
            android:layout_width="0dp"
            android:text="@string/swipe_up_gesture_text_2"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"/>
              
        <TextView
            android:id="@+id/swipe_up_gesture_style_1_text_3"
            android:layout_width="0dp"
            android:text="@string/swipe_up_gesture_text_3"
            android:textSize="10sp" 
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"/>
             

    </LinearLayout>
</RelativeLayout>

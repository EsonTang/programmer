<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/prize_cpu_core_preference_paddingleft"
    android:paddingEnd="?android:attr/scrollbarSize" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView android:id="@+id/cpu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/prize_dashboard_tile_textsize"
			android:textColor="@color/prize_dashboard_tile_textcolor"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal" />

        <TextView android:id="@+id/cpu_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cpu_title"
            android:layout_alignStart="@id/cpu_title"
            android:textSize="@dimen/prize_preference_summary_textsize"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="4" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View 
        android:id="@+id/view1"
        android:layout_width="@dimen/prize_cpu_core_divider"
        android:layout_height="@dimen/prize_cpu_core_divider"
        />
    <ImageView
        android:id="@+id/cpu_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <View 
        android:id="@+id/view2"
        android:layout_width="@dimen/prize_cpu_core_divider"
        android:layout_height="@dimen/prize_cpu_core_divider"
        />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="5dp">
	<View
		 android:id="@+id/data_top_lines"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_alignParentTop="true"
		android:visibility="gone"
		android:background="@color/settings_background_lines"/>
    <TextView
        android:id="@+id/mobile_title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:requiresFadingEdge="horizontal"
        android:ellipsize="none"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp" />
        <ProgressBar
        android:id="@+id/mobile_progressbar"
        android:layout_height="25dip"
        android:layout_width="match_parent"
        android:layout_gravity="fill_horizontal"
        android:max="100"
        android:progressDrawable="@drawable/data_usage_bar_red"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_toEndOf="@id/mobile_title"
        android:layout_alignParentBottom="true"
		android:paddingEnd="10dp"
		android:paddingStart="5dp"/>

        <TextView
        android:id="@+id/mobile_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentEnd="true"
		android:paddingEnd="10dp"/>
</RelativeLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6e6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topdivide" />

            <LinearLayout
                android:id="@+id/wxalipay_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/listitem_margin"
                android:layout_marginRight="@dimen/listitem_margin"
                 android:layout_marginTop="10dp"
                android:background="@drawable/cardview_normal"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/scan_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_vertical|fill_horizontal" >

                    <TextView
                        android:id="@+id/main_scan_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/scan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <LinearLayout
                    android:id="@+id/paycode_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_vertical|fill_horizontal" >

                    <TextView
                        android:id="@+id/main_paycode_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/paycode"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_divide_height" />

            <LinearLayout
                android:id="@+id/mainkey_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/listitem_margin"
                android:layout_marginRight="@dimen/listitem_margin"
                android:background="@drawable/cardview_normal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/nothing_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/nothing_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/nothing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/nothing_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:id="@+id/nothing_divide"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/lockscreen_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/lockscreen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/lockscreen"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/lockscreen_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/back_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/back_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/back"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/back_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/home_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/home_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/mainhome"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/home_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/recent_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/recent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/recent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/recent_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/control_center_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/control_center_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/control"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/control_center_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_divide_height" />

            <LinearLayout
                android:id="@+id/otherfunction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/listitem_margin"
                android:layout_marginRight="@dimen/listitem_margin"
                android:background="@drawable/cardview_normal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/screenshot_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/screenshot_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/screenshot"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/screenshot_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/xiaoku_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/xiaoku_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/xiaoku"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/xiaoku_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/blueeye_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/blueeye_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/huyan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/blueeye_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/dividescreen_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/dividescreen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/divide_screen"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/dividescreen_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/clean_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/clean_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/clean"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/clean_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/floatset_l"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listitem_height"
                    android:background="@drawable/item_press_selector" >

                    <TextView
                        android:id="@+id/floatset_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/float_setting"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <ImageView
                        android:id="@+id/floatset_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@color/divide_color" />

                <RelativeLayout
                    android:id="@+id/gamemode_l"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/item_press_selector"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/gamemode_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/gamemode"
                        android:textColor="@color/black"
                        android:textSize="@dimen/item_textsize" />

                    <TextView
                        android:id="@+id/gamemode_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gamemode_tv"
                        android:layout_marginLeft="@dimen/start_margin"
                        android:gravity="center_vertical"
                        android:text="@string/gamemode_layout_summary"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/gamemode_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/start_margin"
                        android:src="@drawable/ck_press"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_divide_height" />

            <RelativeLayout
                android:id="@+id/application_l"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listitem_height"
                android:layout_marginLeft="@dimen/listitem_margin"
                android:layout_marginRight="@dimen/listitem_margin"
                android:background="@drawable/cardview_bg" >

                <TextView
                    android:id="@+id/application_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/start_margin"
                    android:gravity="center_vertical"
                    android:text="@string/application"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/start_margin"
                    android:background="@drawable/rightarrow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginBottom="5dip"
        android:gravity="bottom|center_horizontal"
        >

    <com.android.camera.ui.RotateLayout
	android:id="@+id/gy_rl_levelseek"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
    <SeekBar
	android:id="@+id/gy_beatifySeekBar"
	android:layout_width="170dip"
	android:layout_height="wrap_content"
	android:maxHeight="7dip"
	android:minHeight="7dip"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"  
	android:progressDrawable="@drawable/gy_seekbar_default"
	android:thumb="@drawable/gy_seekbar_thumb_normal18"
	android:visibility="gone">
	</SeekBar>
    </com.android.camera.ui.RotateLayout>

    <com.android.camera.ui.RotateLayout
	android:id="@+id/gy_rl_leveltip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
     <TextView 
	android:id="@+id/gy_exposureTextView"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/gy_exposure_tips"
	android:textColor="#FFFFFF"
	android:layout_marginTop="3dp"
	android:visibility="gone"/>
    </com.android.camera.ui.RotateLayout>
</LinearLayout>

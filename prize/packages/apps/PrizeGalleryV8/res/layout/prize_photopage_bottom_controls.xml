<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/thirty_percent_black"
    android:orientation="vertical"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabview_height"
         >

        <LinearLayout
            android:id="@+id/photopage_buttomd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:weightSum="5" >

            <LinearLayout
                android:id="@+id/view_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/im_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sel_photo_prize_edit" />

                <TextView
                    style="@style/PhotoPageBottomText"
                    android:text="@string/edit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/im_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sel_photo_prize_share" />

                <TextView
                    style="@style/PhotoPageBottomText"
                    android:text="@string/share" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_set_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/im_set_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sel_photo_prize_setto" />

                <TextView
                    style="@style/PhotoPageBottomText"
                    android:text="@string/set_to_image" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/im_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sel_photo_prize_del" />

                <TextView
                    style="@style/PhotoPageBottomText"
                    android:text="@string/delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/im_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sel_photo_prize_more" />

                <TextView
                    style="@style/PhotoPageBottomText"
                    android:text="@string/more" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statusbar_add_actionbar_height_divide"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/thirty_percent_black"
    android:paddingTop="@dimen/statusbar_height"
    android:paddingBottom="@dimen/divide_height">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height_prize"
        android:paddingLeft="@dimen/title_edge_h"
        android:paddingRight="@dimen/title_edge_h"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/title_green"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_height_prize"
        android:layout_weight="5"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:text="@string/container_title"/>

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height_prize"
        android:paddingLeft="@dimen/title_edge_h"
        android:paddingRight="@dimen/title_edge_h"
        android:gravity="center"
        android:text="@string/done"
        android:textColor="@color/done_text"
        android:textSize="@dimen/text_size_middle" />

</LinearLayout>
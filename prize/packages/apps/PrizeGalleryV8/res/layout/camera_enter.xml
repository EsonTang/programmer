<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/enter_to_camera_img"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_picture_tip"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"/>

    <TextView android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/enter_to_camera"
        android:textColor="@color/albumset_empty_tip"
        android:text="@string/not_picture_tip"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>

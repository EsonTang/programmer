<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="@dimen/tabview_height"
    android:background="@drawable/ic_bottom_bg_divide_prize"
    android:visibility="gone"
    android:paddingTop="@dimen/divide_height">

    <LinearLayout
        android:id="@+id/linear_buttom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/view_delete_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/prize_sel_album_share" />

            <TextView
                style="@style/AlbumBottomText"
                android:text="@string/share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_set_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_set_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/prize_sel_album_setto" />

            <TextView
                style="@style/AlbumBottomText"
                android:text="@string/set_to_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/prize_sel_album_detail" />

            <TextView
                style="@style/AlbumBottomText"
                android:text="@string/prize_detail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/prize_sel_album_del" />

            <TextView
                style="@style/AlbumBottomText"
                android:text="@string/delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_delete_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
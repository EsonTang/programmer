<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/action_bar_color"    android:orientation="vertical" >	    <ViewSwitcher        android:id="@+id/viewSwitcher"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1.0" />				    <RelativeLayout        android:id="@+id/create_new_note_rl"        android:layout_width="match_parent"        android:layout_height="@dimen/density_52dp"		android:layout_marginBottom="0dp"        android:background="@color/action_bar_color">			<View			android:layout_width="match_parent"			android:layout_height="3dp"			android:layout_alignParentTop="true"			android:background="@drawable/shadow_bottom"></View>							        <TextView            android:id="@+id/new_note"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:background="@drawable/add_new_note_selector" />    </RelativeLayout></LinearLayout>
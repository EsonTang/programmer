<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/function_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cootek_funcbar_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/titlebar_back"
            android:layout_width="@dimen/cootek_funcbar_height"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cootek_funbar_sidebtn_left_bg"
            android:scaleType="centerInside"
            android:src="@drawable/cootek_back_normal" />

        <TextView
            android:id="@+id/titlebar_back_close"
            android:layout_width="@dimen/cootek_funcbar_height"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/titlebar_back"
            android:background="@drawable/cootek_funbar_sidebtn_left_bg"
            android:gravity="center"
            android:text="@string/tl_back_close_text"
            android:textColor="#616161"
            android:textSize="@dimen/cootek_header_close_textsize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titlebar_text"
            android:layout_width="92dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:text="@string/cootek_titlebar_name"
            android:textColor="#333333"
            android:textSize="@dimen/cootek_header_title_textsize" />

        <RelativeLayout
            android:id="@+id/titlebar_menu"
            android:layout_width="@dimen/cootek_funcbar_height"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/cootek_funbar_sidebtn_left_bg"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/titlebar_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/titlebar_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/titlebar_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#a2a2a2" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cootek_TextColorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cootek_individual_share_padding1"
        android:layout_marginTop="@dimen/cootek_individual_share_padding0"
        android:gravity="center"
        android:text="@string/cootek_individual_invitation"
        android:textColor="@color/cootek_TextColorBlack"
        android:textSize="@dimen/cootek_individual_share_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cootek_individual_share_padding3"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/invite_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/cootek_individual_share_padding2"
                android:src="@drawable/cootek_tl_individual_sms_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invite_sms"
                android:layout_centerHorizontal="true"
                android:text="@string/cootek_individual_sms"
                android:textColor="@color/cootek_individual_share_textcolor"
                android:textSize="@dimen/cootek_individual_share_textsize2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/invite_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/cootek_individual_share_padding2"
                android:src="@drawable/cootek_tl_individual_wechat_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invite_wechat"
                android:layout_centerHorizontal="true"
                android:text="@string/cootek_individual_wechat"
                android:textColor="@color/cootek_individual_share_textcolor"
                android:textSize="@dimen/cootek_individual_share_textsize2" />
        </RelativeLayout>


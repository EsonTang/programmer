<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cootek_dialog_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cootek_dialog_title"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="5"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/dialog_neverNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/cootek_dialog_nevernotify" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@color/cootek_dialog_color_btn_bg"
            android:gravity="center"
            android:text="@string/cootek_dialog_btn_cancell"
            android:textColor="@color/cootek_dialog_color_btn_text" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/cootek_dialog_color_btn_bg"
            android:gravity="center"
            android:text="@string/cootek_dialog_btn_positive"
            android:textColor="@color/cootek_dialog_color_btn_text" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/search_text_view"
                android:layout_width="@dimen/cootek_native_items_width"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical|left"
                android:layout_height="40dp"
                android:textColor="#333"
                android:textSize="15dp"
                android:singleLine="true"
                android:background="@drawable/cootek_indexview_search_holder_bg"
                android:textColorHint="#9b9b9b"
                android:hint="搜索: 肯德基、招商银行...">
            </TextView>
            <GridView
                android:id="@+id/topFourGrid"
                android:layout_width="match_parent"
                android:numColumns="auto_fit"
                android:columnWidth="80dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:stretchMode="columnWidth"
                android:layout_height="wrap_content">
            </GridView>
            <TextView
                android:layout_width="@dimen/cootek_native_items_width"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:background="@drawable/cootek_indexview_seperate_line">
            </TextView>
            <GridView
                android:id="@+id/othersGrid"
                android:layout_width="match_parent"
                android:numColumns="auto_fit"
                android:columnWidth="80dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:stretchMode="columnWidth"
                android:scrollbars="none"
                android:layout_height="300dp">
            </GridView>
            <TextView
                android:layout_width="@dimen/cootek_native_items_width"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#aaaaaa">
            </TextView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/network_enable_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#bb000000">

        <TextView
            android:layout_width="@dimen/cootek_native_items_width"
            android:layout_height="@dimen/cootek_native_net_pic_height"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/cootek_indexview_guide_text"/>

        <TextView
            android:id="@+id/network_button"
            android:layout_width="@dimen/cootek_native_net_btn_width"
            android:layout_height="@dimen/cootek_native_net_btn_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/cootek_indexview_guide_btn"
            android:layout_gravity="center"/>
    </LinearLayout>

    <include layout="@layout/cootek_indexview_permission"/>
</RelativeLayout>
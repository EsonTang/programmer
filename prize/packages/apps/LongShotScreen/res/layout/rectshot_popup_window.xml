<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_height"
    android:layout_gravity="bottom"
    android:background="@color/actions_background"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/rectshot_exit"
        style="@style/funnyshot_rectshot_menu"
        android:drawableTop="@drawable/exit"
        android:textSize="@dimen/action_text_size"
        android:text="@string/exit" />

    <TextView
        android:id="@+id/rectshot_scrawl"
        style="@style/funnyshot_rectshot_menu"
        android:drawableTop="@drawable/scrawl"
        android:textSize="@dimen/action_text_size"
        android:text="@string/scrawl" />

    <TextView
        android:id="@+id/rectshot_save"
        style="@style/funnyshot_rectshot_menu"
        android:drawableTop="@drawable/save"
        android:textSize="@dimen/action_text_size"
        android:text="@string/save" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
      <LinearLayout android:id="@+id/layout_dual_imei" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/title_dual_imei" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/title_dual_imei" />
        <EditText android:textSize="20.0sp" android:id="@+id/dual_imei" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="15" android:numeric="decimal" />
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_button1" android:layout_width="fill_parent" android:layout_height="wrap_content" >
 
        <Button android:id="@+id/button_write_dual" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/button_write"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_sim1_imei" android:layout_marginTop="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/title_sim1_imei" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/title_sim1_imei" />
        <EditText android:textSize="20.0sp" android:id="@+id/sim1_imei" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="15" android:numeric="decimal" />
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_button2" android:layout_width="fill_parent" android:layout_height="wrap_content" >
	<Button android:id="@+id/button_write_sim1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/button_write"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_new_imei2" android:layout_marginTop="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/title_new_imei2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/title_sim2_imei" />
        <EditText android:textSize="20.0sp" android:id="@+id/sim2_imei" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLength="15" android:numeric="decimal" />
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_button3" android:layout_width="fill_parent" android:layout_height="wrap_content" >
	<Button android:id="@+id/button_write_sim2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/button_write"/>
    </LinearLayout>
</LinearLayout>
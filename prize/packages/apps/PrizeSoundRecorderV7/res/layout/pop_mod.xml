<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
    
    <TextView android:id="@+id/record_format"
          android:text="@string/voice_quality"
          style="@style/pop_item_style"
          android:gravity="center_vertical"
          android:background="@drawable/pop_item_selector"
          />
    
    <TextView android:id="@+id/record_mode"
          android:text="@string/recording_mode"
          style="@style/pop_item_style"
          android:gravity="center_vertical"
          android:background="@drawable/pop_item_selector"
          />
    
    <!-- <item android:id="@+id/record_effect"
          android:title="@string/recording_effect"
          android:visible="false"/> -->

</LinearLayout>

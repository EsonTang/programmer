<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/prize_action_layout"
        android:orientation="horizontal"
        android:minHeight="@dimen/prize_action_bar_height"
        android:gravity="center_vertical" >
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentStart="true" >
      <ImageButton 
          android:id="@+id/back_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/prize_back_button_2016_7_22"
          android:background="@null"
          android:gravity="center"
        />
    </LinearLayout>
        
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/prize_title_text_size"
            android:textColor="@color/prize_black_color"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

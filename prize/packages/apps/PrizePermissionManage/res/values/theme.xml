<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material.Settings" />

    <style name="Theme.Settings" parent="Theme.SettingsBase">
        <item name="@*android:preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategory</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_material_prize</item>
        <item name="android:prizeActiobBarStyle">@style/PrizeActionBar</item>
        <item name="android:prizeActiobBarStyleElevation">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="@*android:actionBarSize">40dp</item>
    </style>
    <style name="PreferenceFragmentStyle" parent="@*android:style/PreferenceFragment">
        <item name="android:layout">@layout/preference_list_fragment</item>
    </style>

    <style name="PreferenceCategory" parent="@*android:style/Preference.Material.Category">
        <item name="android:layout">@layout/preference_category_material_settings</item>
        <item name="android:shouldDisableView">true</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="PrizeActionBar">
        <item name="android:visibility">visible</item>
    </style>

    <style name="PrizeLocalActivityStyle" parent="@android:style/Theme.Material.Settings">
        <item name="android:actionBarTabStyle">@style/Prize.Widget.Material.ActionBar.TabView</item>
        <item name="android:actionBarTabBarStyle">@style/Prize.Widget.Material.ActionBar.TabBar</item>
        <item name="android:statusBarColor">@color/settings_statusbar_background</item>
        <item name="@*android:preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategory</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_material_prize</item>
    </style>

    <style name="Prize.Widget.Material.ActionBar.TabView" parent="@*android:style/Widget.Material.ActionBar.TabView">
        <item name="android:background">@color/settings_statusbar_background</item>
    </style>
    <style name="Prize.Widget.Material.ActionBar.TabBar" parent="@*android:style/Widget.Material.ActionBar.TabBar">
        <item name="android:divider">@null</item>
    </style>

    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:elevation">0dp</item>
    </style>
</resources>
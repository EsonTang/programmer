<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- prize-delete-huangliemin-2016-7-29-android:layout_marginBottom="@dimen/prize_floating_action_button_height" -->

        <ListView
            android:background="@drawable/prize_card_layout_bg_normal"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/prize_card_layout_padding_left_right"
            android:layout_marginEnd="@dimen/prize_card_layout_padding_left_right"
            android:layout_marginTop="@dimen/prize_card_layout_padding_top"
            android:layout_marginBottom="@dimen/contact_list_custom_margin_bottom"
            android:scrollbars="none"
            android:divider="@null"/>
        
        <View
            android:id="@+id/prize_divider"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/prize_bottom_button_shadow_height"
            android:background="@drawable/prize_upper_shadow" />
        
        <LinearLayout
            android:id="@+id/prize_bottom_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/prize_floating_action_button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/prize_bottom_button_bg_color"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:clickable="true"
                android:id="@+id/quickcontact_callrecords_delete_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:id="@+id/quickcontact_callrecords_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prize_callrecords_delete" />

                <TextView
                    android:duplicateParentState="true"
                    android:id="@+id/prize_contacts_callrecords_delete_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prize_clear_call_log"
                    android:textColor="@drawable/prize_selector_text_color_btn"
                    android:textSize="@dimen/prize_quickcontact_acticity_contacts_delete_text_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

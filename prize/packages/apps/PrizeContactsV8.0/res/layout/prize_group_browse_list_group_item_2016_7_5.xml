<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prize_single_content_height"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_marginEnd="@dimen/prize_content_padding_right"
        android:layout_marginStart="@dimen/prize_content_padding_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	    
	     <TextView 
	         android:id="@+id/label"
	         android:layout_marginStart="20dp"
	         android:layout_marginEnd="100dp"
	         android:ellipsize="end"
	         android:singleLine="true"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:gravity="center_vertical"/>
	     <TextView 
	         android:id="@+id/count"
	         android:layout_alignParentEnd="true"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:gravity="center_vertical"/>
	     
	     <View
	         android:id="@+id/prize_group_divider"
	         android:layout_width="match_parent"
	         android:layout_height="1px"
	         android:layout_alignParentBottom="true"
	         android:background="@color/divider_line_color_light" />
        
    </RelativeLayout>
    

</LinearLayout>

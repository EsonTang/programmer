<!-- the body surrounding all editors for a specific kind -->

<com.android.contacts.editor.KindSectionView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/prize_card_layout_padding_top"
    android:background="@drawable/prize_card_layout_bg_normal">

    <ImageView
        android:id="@+id/kind_icon"
        style="@style/EditKindIconStyle"
        android:visibility="gone" />
        
    <!-- prize add huangliemin 2016-5-31 start-->
    <include
        android:id="@+id/kind_title_layout"
        layout="@layout/edit_kind_title"
        android:visibility="gone"/>
    <!-- prize add huangliemin 2016-5-31 end -->

    <LinearLayout
        android:id="@+id/kind_editors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- prize add huangliemin 2016-5-31 start-->
    <include
        android:id="@+id/add_field_footer"
        layout="@layout/edit_add_field" />
    <!-- prize add huangliemin 2016-5-31 end-->
</com.android.contacts.editor.KindSectionView>
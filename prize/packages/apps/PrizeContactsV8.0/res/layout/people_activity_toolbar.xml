<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/toolbar_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prize_actionbar_custom_height"
        android:background="@color/actionbar_background_color">

    <!-- prize-change-huangliemin-2016-7-19-start -->
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/prize_actionbar_custom_height"
        android:id="@+id/toolbar"
        style="@style/ContactsToolbarStyle" >
        
        <TextView 
            android:id="@+id/contacts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/prize_title_text_size"
            android:text="@string/prize_contacts_title"
            android:textColor="@color/prize_actionbar_title_text_color"
            android:visibility="gone"/>

        <!--prize add for lhp by zhaojian 20180421 start-->
        <TextView
            android:id="@+id/contacts_title_lhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/prize_lhp_action_bar_margin_left"
            android:textSize="@dimen/prize_title_text_size"
            android:text="@string/prize_contacts_title"
            android:textColor="@color/prize_actionbar_title_text_color"
            android:visibility="gone"/>
        <!--prize add for lhp by zhaojian 20180421 end-->
    </Toolbar>
    <!-- prize-change-huangliemin-2016-7-19-end -->

    </FrameLayout>

    <!-- prize remove viewpager zhangzhonghao 20160304 start -->

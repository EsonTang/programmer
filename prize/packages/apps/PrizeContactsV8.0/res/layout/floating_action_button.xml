<!-- prize change all view zhangzhonghao 20160307 start -->
<!-- This expects to be included inside a RelativeLayout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_action_button_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prize_floating_action_button_height"
    android:layout_alignParentBottom="true"
    android:background="@color/prize_bottom_button_bg_color" >
    
    <!-- prize-add-huangliemin-2016-7-18-start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/prize_contacts_dialer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- prize-change-android:background="@drawable/prize_hide_dialpad"-2016-7-29 -->

            <ImageButton
                android:duplicateParentState="true"
                android:id="@+id/prize_contacts_dialer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/prize_hide_dialpad"/>

            <TextView
                android:duplicateParentState="true"
                android:textColor="@drawable/prize_selector_text_color_btn_to_dialer"
                android:id="@+id/prize_dialer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prize_dialer_text_string"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- prize-change-huangliemin-2016-7-29-android:background="@drawable/prize_jump_into_contacts_drawable" -->

            <ImageButton
                android:id="@+id/prize_contacts_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/prize_into_contacts_normal" />

            <TextView
                android:id="@+id/prize_contacts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prize_contacts_text_string"
                android:textColor="@color/prize_button_dialer_text_color"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- prize-add-huangliemin-2016-7-18-end -->

    <ImageButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:contentDescription="@string/action_menu_add_new_contact_button"
        android:src="@drawable/prize_ic_person_add" />

    

</FrameLayout><!-- prize change all view zhangzhonghao 20160307 start -->

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prize_bottom_button_shadow_height"
    android:layout_alignParentBottom="true"
    android:background="@color/transparent" >

    <ImageView 
        android:src="@drawable/prize_upper_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
	
    <RelativeLayout 
        android:layout_alignParentBottom="true"
        android:background="@color/prize_bottom_button_bg_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prize_floating_action_button_height">
        
	    <LinearLayout
	        android:layout_centerInParent="true"
	        android:id="@+id/prize_new_group_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/prize_floating_action_button_height"
	        android:minWidth="@dimen/prize_bottom_text_botton_width"
	        android:gravity="center"
	        android:orientation="vertical"
	        android:background="@color/prize_bottom_button_bg_color">
	        <!--prize add background zhaojian 8.0 2017725  -->
	
	        <ImageButton
	            android:clickable="false"
	            android:duplicateParentState="true"
	            android:id="@+id/prize_new_group"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/transparent"
	            android:src="@drawable/prize_ic_person_add" />
	        <!--prize modify background zhaojian 8.0 2017725  -->
	
	        <TextView
	            android:duplicateParentState="true"
	            android:id="@+id/prize_new_group_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/prize_new_group"
	            android:textSize="10sp"
	            android:textColor="@drawable/prize_selector_text_color_btn" />
	    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
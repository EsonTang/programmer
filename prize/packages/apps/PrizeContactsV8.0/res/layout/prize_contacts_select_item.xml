<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prize_contacts_select_item"
    style="@style/SelectableItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prize_select_contacts_view_height"
    android:clickable="true"
    android:visibility="gone" 
    android:paddingStart="@dimen/prize_content_padding_left">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/prize_contacts_select_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="@string/prize_select_all_contacts" />

       <!--  <ImageView     //prize remove-huangpengfei-2016-8-18
            android:id="@+id/prize_contacts_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/prize_no_select" /> -->
        <CheckBox
            android:id="@+id/prize_contacts_select_checkBox"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="false" />
        
    </RelativeLayout>


    <View
        android:layout_marginEnd="@dimen/prize_content_padding_right"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/prize_divider_line_color" />

</RelativeLayout>